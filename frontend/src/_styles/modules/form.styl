.ui-input
  border-radius 20px
  background-color #fff
  outline none
  border 0

  &--grey
    background #e9eadf
    color #657182
    padding 24px 30px
    font-family 'FuturaPT-Book'
    font-size 18px
    width 330px


.ui-textarea
  background #e9eadf
  color #657182
  padding 24px 30px
  font-family 'FuturaPT-Book'
  font-size 18px
  width 330px
  height 120px
  border-radius 20px
  resize none
  border none

  &--long
    width 490px

.ui-search
  position relative

  &__input
    width 100%
    height 60px
    font-family 'FuturaPT-Book'
    font-size 21px
    padding-left 30px

.ui-settings
  padding-top 25px

  &__group
    padding-bottom 25px

  &__text
    font-family 'FuturaPT-Book'
    font-size 21px
    line-height 72px

  &__column
    display flex
    flex-direction column

.ui-checked
  outline none
  -webkit-appearance none
  width 40px
  height 40px
  background #e9eadf
  border-radius 10px

  &:checked:before
    content ""
    display block
    width 25px
    height 40px
    border 0 solid #ff0000
    border-width 0 2px 2px 0
    -webkit-transform rotateZ(45deg)
    margin -10px 13px
    pointer-events none
