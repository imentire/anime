.ui-button
  color #fff
  background #f80000
  font-family 'FuturaPT-Bold'
  font-size 24px
  border 0
  cursor pointer

  &__search
    position absolute
    top 0
    right 0
    height 100%
    border-radius 20px
    padding 0 56px
    display flex
    align-items center

  &--md
    font-family 'FuturaPT-Book'
    font-size 21px
    border-radius 11px
    padding 20px 26px

  &--white
    background #fff
    color #2e2e2e
    z-index 5

    &:active
      background #f80000
      color #fff
      z-index 15

  &--no-indent
    margin-left -24px
    position relative

    &:first-child
      margin-left 0
