.ui-user-info
  font-family 'FuturaPT-Book'
  font-size 18px
  line-height 30px
  list-style none
  margin 0

.ui-sidebar-menu
  margin 0
  list-style none
  padding 0

  label
    display flex
    align-items center

  span
    font-family 'FuturaPT-Demi'
    font-size 16px
    line-height 36px
    padding-left 10px

  &__link
    font-family 'FuturaPT-Demi'
    font-size 16px
    line-height 36px
    cursor pointer
    padding 8px 10px

    &:active
      background #e9eadf
      border-radius 6px

.ui-film-info
  list-style none
  padding 0
  margin 0
  font-family 'FuturaPT-Demi'
  font-size 18px
  line-height 30px

  &--light
    font-family 'FuturaPT-Book'
    padding-left 40px

.ui-relations
  list-style none
  padding 40px 0
  display flex
  justify-content space-between

  &__item
    display flex
    flex-direction column

  &__img
    width 75px
    height 75px
    border 50%

  &__name
    font-family 'FuturaPT-Demi'
    font-size 18px
    color #fff

    span
      font-family 'FuturaPT-Book'
