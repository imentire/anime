  header.ui-header
    a.ui-logo(href="/")
      img(src="/images/logo.png")
    nav.ui-menu
      .ui-menu__item
        a.ui-menu__link(href="#") АНИМЕ
      .ui-menu__item
        a.ui-menu__link(href="#") ДОРАМЫ
      .ui-menu__item
        a.ui-menu__link(href="#") МАНГА
      .ui-menu__item
        a.ui-menu__link(href="#") ЖАНРЫ
